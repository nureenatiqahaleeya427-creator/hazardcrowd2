<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:background="#1976D2"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="71dp"
                android:layout_height="59dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="SafeCity Logo"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_safecity" />

            <TextView
                android:text="SafeCity"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Version 1.0.0"
                android:textColor="#BBDEFB"
                android:textSize="13sp"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="About SafeCity"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="6dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="SafeCity is a crowdsourced safety platform that empowers users to report and view real-time hazards. By sharing GPS-based data, we help communities stay informed and safe."
                        android:lineSpacingExtra="5dp"
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Development Team"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Nureen Atiqah Aleeya Izdamunir"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="2023836794"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Nur Wafiqah Binti Mohd Fauzi"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="2024542807"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Siti Nur Ashikin Binti Mohd Sopian"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="2023141605"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Nur Farisha Irwayu Binti Osman"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="2023858986"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:text="Bachelor of Computer Science (Hons.)\nNetcentric Computing"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="italic" />

            <LinearLayout
                android:id="@+id/tvGithub"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="8dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="#1565C0"
                    android:layout_marginEnd="6dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"/>

                <TextView
                    android:text="View GitHub Repository"
                    android:textColor="#1565C0"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:text="Â© 2026 SafeCity. All rights reserved."
                android:textSize="11sp"
                android:textColor="#9E9E9E"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>